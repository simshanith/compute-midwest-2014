@require _globals

.splash
  //display none
  opacity 0
  z-index 2
  cursor pointer

[ng-cloak].splash
  display block !important
  opacity 1
  z-index 9999

.splash
  transition opacity 1.0s
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background cGray

.splash-wrapper
  background url('https://trello-attachments.s3.amazonaws.com/5467f3b1ac21f8408a1fa28c/1047x358/41f6726e7da00d0a3c935b23aa60ba1a/Screen_Shot_2014-11-15_at_6.45.07_PM.png') no-repeat center center fixed
  background-size 100%
  min-width 100%
  min-height 100%
  position absolute
  top 0
  left 0
  
  h1
    text-align center
    margin 20vh auto
      
.icon-mania
  width 80%
  margin 0 auto
  .icon
    padding 0 5% 5%
