.where-from
  text-align center
  .map-container
    position relative
    padding-bottom 60%
    width 100%
    height 0
    overflow hidden

    map.squireMap
      width 100%
      height 60% !important
      //padding-bottom 60%
      margin 0
      z-index 2
      position absolute
      left 0
      top 0
      
      &:before
        content ''
        position absolute
        left 0
        top 0
        height 100%
        width 100%
        background-color cRed
        opacity 0.75
        float left
        z-index 3
        pointer-events none
  .pure-button
    width 100%
    margin 0
    background #000
    color #fff