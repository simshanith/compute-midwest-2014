.victory-wrap
  background-color cBlack
  color cTan
  width 100%
  height 100%
  position absolute
  overflow hidden
.victory-top
  height 25vh
  text-align center
  width 100%
  margin-top 6.25vh
.victory-mid
  height 35vh
  position absolute
  left 0
  top 25vh
.victory-bottom
  height 40vh
  background-color cBlack
  position relative
  top 0
  left 0


.victory-wrap label
  background cTan
  color cBlack
  transition transform 400ms ease-out
  display inline-block
  width 100vw
  height 35vh
  position relative
  z-index 1
  text-align center
  line-height 35vh
  background-size cover
  font-size 2em
  overflow hidden
  
  img.pure-img
    display inline
    max-width 75px
    margin-right 1em
  
  &:before
    content ""
    right 100.25%
    border-top-left-radius 50%
    border-bottom-left-radius 50%
      
  &:after
    content ""
    left 99.25%
    border-top-right-radius 50%
    border-bottom-right-radius 50%


.victory-wrap form
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  white-space nowrap


.victory-wrap input
  position absolute
  
  &:focus
    & ~ .keys
      opacity 0.8
  &:nth-of-type(1):checked
    & ~ label
      transform translate3d(0, 0, 0)
  &:nth-of-type(2):checked
    & ~ label
      transform translate3d(-100%, 0, 0)
  &:nth-of-type(3):checked
    & ~ label
      transform translate3d(-200%, 0, 0)
  &:nth-of-type(4):checked
    & ~ label
      transform translate3d(-300%, 0, 0)


.victory-wrap .keys
  position fixed
  z-index 10
  bottom 0
  left 0
  right 0
  padding 1rem
  color cWhite
  text-align center
  transition all 300ms linear
  opacity 0


.victory-wrap
  input:nth-of-type(1):checked ~ label:nth-of-type(1), 
  input:nth-of-type(2):checked ~ label:nth-of-type(2),
  input:nth-of-type(3):checked ~ label:nth-of-type(3),
  input:nth-of-type(4):checked ~ label:nth-of-type(4)
    z-index 0

  label[for="diamonds"],
  label[for="hearts"]
    background cTan

  label:before,
  label:after
    color cBlack
    display block
    background cWhite
    position absolute
    padding 1em
    font-size 3rem
    height 10rem
    vertical-align middle
    line-height 5rem
    top 50%
    transform translate3d(0, -50%, 0)
    cursor pointer
    
  button.victory-button
    width 50vh
    height 4em
    margin 1em auto
    display block
    clear both
    font-size 1.4em
    color cTan
    text-transform uppercase

  .vTip
    background-color cRed
  .vStop
    background-color cTeal
  .vFin
    background-color cBlack

