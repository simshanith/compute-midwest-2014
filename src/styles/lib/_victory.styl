label
  background cTeal
  color cWhite
  transition transform 400ms ease-out
  display inline-block
  min-height 100%
  width 100vw
  height 100vh
  position relative
  z-index 1
  text-align center
  line-height 100vh
  background-size cover
  font-size 20em
  letter-spacing -0.06em
  font-weight 200
  &:before
    content ""
    right 100.25%
    border-top-left-radius 50%
    border-bottom-left-radius 50%
      
  &:after
    content ""
    left 99.25%
    border-top-right-radius 50%
    border-bottom-right-radius 50%

form
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  white-space nowrap

input
  position absolute
  
  &:focus
    & ~ .keys
      opacity 0.8
  &:nth-of-type(1):checked
    & ~ label
      transform translate3d(0, 0, 0)
  &:nth-of-type(2):checked
    & ~ label
      transform translate3d(-100%, 0, 0)
  &:nth-of-type(3):checked
    & ~ label
      transform translate3d(-200%, 0, 0)
  &:nth-of-type(4):checked
    & ~ label
      transform translate3d(-300%, 0, 0)

.keys
  position fixed
  z-index 10
  bottom 0
  left 0
  right 0
  padding 1rem
  color cWhite
  text-align center
  transition all 300ms linear
  opacity 0

input:nth-of-type(1):checked ~ label:nth-of-type(1), 
input:nth-of-type(2):checked ~ label:nth-of-type(2),
input:nth-of-type(3):checked ~ label:nth-of-type(3),
input:nth-of-type(4):checked ~ label:nth-of-type(4)
  z-index 0

label[for="diamonds"],
label[for="hearts"]
  background cRed

label:before,
label:after
  color cBlack
  display block
  background cWhite
  position absolute
  padding 1em
  font-size 3rem
  height 10rem
  vertical-align middle
  line-height 5rem
  top 50%
  transform translate3d(0, -50%, 0)
  cursor pointer
