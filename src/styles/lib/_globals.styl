// Imports.
//@import nib
@import "kouto-swiss"

ks-display-override(value, args...)
  prop = unquote("display")
  {prop} value args

display = ks-display-override

hashLookup(obj, key)
  obj[key]

imageUrl(image)
  url(s('%s/%s', unquote(hashLookup(paths, 'images')), unquote(image)))

// Font Family Stacks
sansStack = Helvetica, Arial, sans-serif
futuraStack = "futura-pt", sansStack

// Colors
cPurple = #372B5F
cTan = #d4e0cf
cLightTan = #e4e0cf
cBeige = #d8d4c5
cRed = #D0471F
cTeal = #339BA1
cBlack = #121210
cWhite = #FFFFFC
cGray = #5D5D5D
cBlanket = rgba(0,0,0,0.3)

//Sizing
border-radius(n)
  border-radius n
