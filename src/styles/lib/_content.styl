@require _globals

.mainContent
  position absolute
  width 100%
  height 100%
  z-index 3

//Animation Structure

.mainContent.ng-enter {
  transform-origin 0% 50%
  animation: rotateRoomLeftIn .8s both ease
  z-index: 999;
}

.mainContent.ng-leave {
  transform-origin 100% 50%
  animation: rotateRoomLeftOut .8s both ease
}

.mainContent.ui-view-decision.ng-leave
  animation none
  opacity 1

.mainContent.ui-view-location-details.ng-enter
  animation none
  opacity 1


